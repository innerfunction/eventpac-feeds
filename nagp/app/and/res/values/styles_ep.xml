<resources>

    <style name="Theme.spashScreen" parent="@style/android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.eventpac.CustomActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/EPActionBar</item>
        
        <item name="android:actionBarItemBackground">@drawable/selectable_background_eventpac</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="EPActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
 		<item name="android:background">@drawable/ab_solid_eventpac</item>
 		<item name="android:backgroundStacked">@drawable/ab_stacked_solid_eventpac</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_eventpac</item> 
    </style>

</resources>